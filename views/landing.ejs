        if (heroSection) {
            heroSection.addEventListener('mouseenter', function() {
                clearInterval(heroInterval);
            });
            
            heroSection.addEventListener('mouseleave', function() {
                heroInterval = setInterval(nextHeroSlide, 5000);
            });
        }
        
        
        if (foodSliderContainer) {
