  <script>
   
    window.addEventListener('scroll', function() {
        const header = document.querySelector('header');
        const scrollPosition = window.scrollY;
        
       
        if (scrollPosition > 50) {
            header.classList.add('scrolled');
        } else {
            header.classList.remove('scrolled');
        }
    });

   
    document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const navLinks = document.querySelector('.nav-links');
        
        if (mobileMenuBtn) {
            mobileMenuBtn.addEventListener('click', function() {
                navLinks.classList.toggle('active');
                
                const icon = this.querySelector('i');
                if (navLinks.classList.contains('active')) {
                    icon.classList.remove('fa-bars');
                    icon.classList.add('fa-times');
                } else {
                    icon.classList.remove('fa-times');
                    icon.classList.add('fa-bars');
                }
            });
        }
       
        const navItems = document.querySelectorAll('.nav-links a');
        navItems.forEach(item => {
            item.addEventListener('click', function() {
                if (window.innerWidth <= 768) {
                    navLinks.classList.remove('active');
                    const icon = mobileMenuBtn.querySelector('i');
                    icon.classList.remove('fa-times');
                    icon.classList.add('fa-bars');
                }
            });
        });

       
        const heroSlides = document.querySelectorAll('.hero-slide');
        const heroDots = document.querySelectorAll('.hero-dot');
        const heroSlider = document.querySelector('.hero-slider');
        const currentSlideSpan = document.querySelector('.current-slide');
        const totalSlidesSpan = document.querySelector('.total-slides');
        
        let currentHeroSlide = 0;
        let heroInterval;
        const totalHeroSlides = heroSlides.length;
        
        if (totalSlidesSpan) {
            totalSlidesSpan.textContent = totalHeroSlides;
        }
        
        function showHeroSlide(index) {
            
            heroSlides.forEach(slide => slide.classList.remove('active'));
            heroDots.forEach(dot => dot.classList.remove('active'));
            
           
            heroSlides[index].classList.add('active');
            heroDots[index].classList.add('active');
            
           
            if (currentSlideSpan) {
                currentSlideSpan.textContent = index + 1;
            }
            
            currentHeroSlide = index;
        }
        
        function nextHeroSlide() {
            currentHeroSlide = (currentHeroSlide + 1) % totalHeroSlides;
            showHeroSlide(currentHeroSlide);
        }
        
        
        heroDots.forEach((dot, index) => {
            dot.addEventListener('click', function(e) {
                e.stopPropagation();
             
                clearInterval(heroInterval);
               
                showHeroSlide(index);
                
                heroInterval = setInterval(nextHeroSlide, 5000);
            });
        });
        
       
        if (heroSlider) {
            heroSlider.addEventListener('click', function(e) {
                
                if (e.target.classList.contains('hero-dot') || 
                    e.target.closest('.hero-slider-dots') ||
                    e.target.closest('.hero-slide-counter')) {
                    return;
                }
                
                
                clearInterval(heroInterval);
               
                nextHeroSlide();
                
                heroInterval = setInterval(nextHeroSlide, 5000);
            });
        }
        
        
        heroInterval = setInterval(nextHeroSlide, 5000);
        

        const foodSlides = document.querySelectorAll('.food-slide');
        const foodDots = document.querySelectorAll('.food-dot');
        const foodSliderContainer = document.querySelector('.food-slider-container');
        const currentFoodSlideSpan = document.querySelector('.current-food-slide');
        const totalFoodSlidesSpan = document.querySelector('.total-food-slides');
        
        let currentFoodSlide = 0;
        let foodInterval;
        const totalFoodSlides = foodSlides.length;
        
        if (totalFoodSlidesSpan) {
            totalFoodSlidesSpan.textContent = totalFoodSlides;
        }
        
        function showFoodSlide(index) {
           
            foodSlides.forEach(slide => slide.classList.remove('active'));
            foodDots.forEach(dot => dot.classList.remove('active'));
            
           
            foodSlides[index].classList.add('active');
            foodDots[index].classList.add('active');
            
            
            if (currentFoodSlideSpan) {
                currentFoodSlideSpan.textContent = index + 1;
            }
            
          
            currentFoodSlide = index;
        }
        
        function nextFoodSlide() {
            currentFoodSlide = (currentFoodSlide + 1) % totalFoodSlides;
            showFoodSlide(currentFoodSlide);
        }
        
       
        foodDots.forEach((dot, index) => {
            dot.addEventListener('click', function(e) {
                e.stopPropagation();
              
                clearInterval(foodInterval);
              
                showFoodSlide(index);
             
                foodInterval = setInterval(nextFoodSlide, 4000);
            });
        });
        
       
        if (foodSliderContainer) {
            foodSliderContainer.addEventListener('click', function(e) {
               
                if (e.target.classList.contains('food-dot') || 
                    e.target.closest('.food-slider-dots') ||
                    e.target.closest('.food-slide-counter') ||
                    e.target.closest('.rating') ||
                    e.target.tagName === 'H4' ||
                    e.target.tagName === 'P') {
                    return;
                }
                
               
                clearInterval(foodInterval);
               
                nextFoodSlide();
              
                foodInterval = setInterval(nextFoodSlide, 4000);
            });
        }
        
       
        foodInterval = setInterval(nextFoodSlide, 4000);
        
     
